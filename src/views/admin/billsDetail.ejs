<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="apple-touch-icon"
      sizes="76x76"
      href="../assets/img/apple-icon.png"
    />
    <link rel="icon" type="image/png" href="../assets/img/favicon.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Admin</title>
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <!--     Fonts and icons     -->
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"
    />
    <!-- CSS Files -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="/assets/css/light-bootstrap-dashboard.css?v=2.0.0 "
      rel="stylesheet"
    />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="/assets/css/demo.css" rel="stylesheet" />
    <style>
      .modal-content .modal-footer {
        justify-content: flex-end !important;
        gap: 15px;
      }
    </style>
  </head>

  <body>
    <div class="wrapper"><%- include('./sidebar',{hrefUrl : url}); -%></div>
    <div class="main-panel">
      <!-- Navbar -->
      <%- include('./navbar'); -%>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div className="col-md-12" style="width: 100%; padding-left: 20px">
              <div className="product-checkout-details mt-5 mt-lg-0">
                <h4 className="mb-4 border-bottom pb-4">Thông tin đơn hàng</h4>
                <!-- map -->
                <ul
                  style="padding-left: 0"
                  className="summary-prices list-unstyled mb-4"
                >
                  <li
                    style="
                      display: flex;
                      gap: 60px;
                      margin-bottom: 15px;
                      border-bottom: 1px solid #ddd;
                      padding-bottom: 5px;
                    "
                    className="d-flex justify-content-between"
                  >
                    <span style="min-width: 100px; text-align: justify"
                      >- Người mua :</span
                    >
                    <span
                      style="font-size: 16px; font-weight: 600"
                      className="h5"
                      ><%= data.nguoi_nhan %></span
                    >
                  </li>
                  <li
                    style="
                      display: flex;
                      gap: 60px;
                      margin-bottom: 15px;
                      border-bottom: 1px solid #ddd;
                      padding-bottom: 5px;
                    "
                    className="d-flex justify-content-between"
                  >
                    <span style="min-width: 100px; text-align: justify"
                      >- Số điện thoại :</span
                    >
                    <span
                      style="font-size: 16px; font-weight: 600"
                      className="h5"
                      ><%= data.sdt %></span
                    >
                  </li>
                  <li
                    style="
                      display: flex;
                      gap: 60px;
                      margin-bottom: 15px;
                      border-bottom: 1px solid #ddd;
                      padding-bottom: 5px;
                    "
                    className="d-flex justify-content-between"
                  >
                    <span style="min-width: 100px; text-align: justify"
                      >- Địa chỉ :</span
                    >
                    <span
                      style="font-size: 16px; font-weight: 600"
                      className="h5"
                      ><%= data.dia_chi %></span
                    >
                  </li>
                  <li
                    style="
                      display: flex;
                      gap: 60px;
                      margin-bottom: 15px;
                      border-bottom: 1px solid #ddd;
                      padding-bottom: 5px;
                    "
                    className="d-flex justify-content-between"
                  >
                    <span style="min-width: 100px">- Trạng thái :</span>
                    <span
                      style="font-size: 16px; font-weight: 600"
                      className="h5"
                    >
                      <% if (data.trang_thai) { %> Đã giao hàng <% } else { %>
                      Chưa giao hàng <% } %></span
                    >
                  </li>
                  <% data.gio_hang.forEach(item => { %>
                  <ul style="padding-left: 0; margin-top: 15px">
                    <li
                      style="
                        display: flex;
                        gap: 60px;
                        margin-bottom: 15px;
                        border-bottom: 1px solid #ddd;
                        padding-bottom: 5px;
                      "
                      className="d-flex justify-content-between"
                    >
                      <span style="min-width: 100px; text-align: justify"
                        >- Tên sản phẩm :</span
                      >
                      <span
                        style="font-size: 16px; font-weight: 600"
                        className="h5"
                        ><%= item.ten_sp%></span
                      >
                    </li>
                    <li
                      style="
                        display: flex;
                        gap: 60px;
                        margin-bottom: 15px;
                        border-bottom: 1px solid #ddd;
                        padding-bottom: 5px;
                      "
                      className="d-flex justify-content-between"
                    >
                      <span style="min-width: 100px; text-align: justify"
                        >- Số lượng :</span
                      >
                      <span
                        style="font-size: 16px; font-weight: 600"
                        className="h5"
                        ><%= item.so_luong %> (kg)</span
                      >
                    </li>
                    <li
                      style="
                        display: flex;
                        gap: 60px;
                        margin-bottom: 15px;
                        border-bottom: 1px solid #ddd;
                        padding-bottom: 5px;
                      "
                      className="d-flex justify-content-between"
                    >
                      <span style="min-width: 100px; text-align: justify"
                        >- Giá :</span
                      >
                      <span
                        style="font-size: 16px; font-weight: 600"
                        className="h5"
                        ><%= item.don_gia.toLocaleString("vi-VN", { style:
                        "currency", currency: "VND", }) %></span
                      >
                    </li>
                  </ul>
                  <% }) %>
                  <li
                    style="
                      display: flex;
                      gap: 60px;
                      margin-bottom: 15px;
                      border-bottom: 1px solid #ddd;
                      padding-bottom: 5px;
                    "
                    className="d-flex justify-content-between"
                  >
                    <span style="min-width: 100px; text-align: justify"
                      >- Tổng tiền :</span
                    >
                    <span
                      style="font-size: 16px; font-weight: 600"
                      className="h5"
                    >
                      <%= data.tong_tien.toLocaleString("vi-VN", { style:
                      "currency", currency: "VND", }) %></span
                    >
                  </li>
                </ul>
                <a href="/admin/bills" className="btn btn-main btn-small">
                  Quay lại
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <!--   Core JS Files   -->
  <script
    src="../assets/js/core/jquery.3.2.1.min.js"
    type="text/javascript"
  ></script>
  <script src="../assets/js/core/popper.min.js" type="text/javascript"></script>
  <script
    src="../assets/js/core/bootstrap.min.js"
    type="text/javascript"
  ></script>
  <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
  <script src="../assets/js/plugins/bootstrap-switch.js"></script>
  <!--  Google Maps Plugin    -->
  <script
    type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"
  ></script>
  <!--  Chartist Plugin  -->
  <script src="../assets/js/plugins/chartist.min.js"></script>
  <!--  Notifications Plugin    -->
  <script src="../assets/js/plugins/bootstrap-notify.js"></script>
  <!-- Control Center for Light Bootstrap Dashboard: scripts for the example pages etc -->
  <script
    src="../assets/js/light-bootstrap-dashboard.js?v=2.0.0 "
    type="text/javascript"
  ></script>
  <!-- Light Bootstrap Dashboard DEMO methods, don't include it in your project! -->
  <script src="../assets/js/demo.js"></script>
  <script>
    let id;
    const form_delete = document.forms['delete-bills-form'];
    //onpen modal delete bill
    $('#delete-bill').on('shown.bs.modal', function (e) {
      id = e.relatedTarget.dataset.id;
      console.log(e.relatedTarget.dataset.id);
    });

    $('#btn-delete-bill').click(function () {
      if (id != null) {
        form_delete.action = 'bills/delete/' + id;
        form_delete.submit();
      }
      return;
    });
  </script>
</html>
